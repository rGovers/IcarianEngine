#version 450

layout(location = 0) out vec2 vUV;

// #!pushbuffer(UIBuffer, uiBuffer)

void main()
{
    vec2 pos = vec2(gl_VertexIndex & 1, gl_VertexIndex >> 1);
    // gl_Position = uiBuffer.Model * vec4(pos * 2.0 + -1.0, 0.0, 1.0);
    gl_Position = vec4(pos * 2.0 + -1.0, 0.0, 1.0);
    vUV = pos;
}